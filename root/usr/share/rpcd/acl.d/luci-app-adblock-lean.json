{
	"luci-app-adblock-lean": {
		"description": "Grant access to LuCI app AdBlock Lean",
		"write": {
			"file": {
				"/root/adblock-lean/*": [
					"read",
					"write"
				],
				"/root/adblock-lean/allowlist": [
					"write"
				],
				"/root/adblock-lean/blocklist": [
					"write"
				]
			}
		},
		"read": {
			"cgi-io": [
				"exec"
			],
			"file": {
				"/etc/init.d/adblock-lean start": [
					"exec"
				],
				"/etc/init.d/adblock-lean stop": [
					"exec"
				],
				"/etc/init.d/adblock-lean gen_stats": [
					"exec"
				],
				"/etc/init.d/adblock-lean pause": [
					"exec"
				],
				"/etc/init.d/adblock-lean resume": [
					"exec"
				],
				"/etc/init.d/adblock-lean check_for_updates": [
					"exec"
				],
				"/etc/init.d/adblock-lean update": [
					"exec"
				]
			},
			"ubus": {
				"luci.adblock-lean": [
					"getStatus"
				]
			}
		}
	}
}
